{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "PaperSummary",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "arxiv_id_base",
    "title",
    "published_date",
    "categories",
    "paper_type",
    "one_liner",
    "detailed_summary",
    "unique_contribution",
    "key_points",
    "data_scale",
    "method",
    "evaluation",
    "open_source",
    "tags",
    "limitations",
    "used_fulltext",
    "notes"
  ],
  "properties": {
    "arxiv_id_base": { "type": "string" },
    "title": { "type": "string", "minLength": 3 },
    "published_date": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
    "categories": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    },
    "paper_type": {
      "type": "string",
      "enum": ["new_model", "benchmark", "survey", "method", "application", "other"]
    },
    "one_liner": { "type": "string", "minLength": 5, "maxLength": 300 },
    "detailed_summary": { "type": "string", "minLength": 80, "maxLength": 1200 },
    "unique_contribution": { "type": "string", "minLength": 5, "maxLength": 400 },
    "key_points": {
      "type": "array",
      "items": { "type": "string", "minLength": 3 },
      "minItems": 2,
      "maxItems": 3
    },
    "data_scale": {
      "type": "object",
      "additionalProperties": false,
      "required": ["datasets", "subjects", "eeg_hours", "channels"],
      "properties": {
        "datasets": { "type": "array", "items": { "type": "string" } },
        "subjects": { "type": ["number", "null"] },
        "eeg_hours": { "type": ["number", "null"] },
        "channels": { "type": ["number", "null"] }
      }
    },
    "method": {
      "type": "object",
      "additionalProperties": false,
      "required": ["architecture", "objective", "pretraining", "finetuning"],
      "properties": {
        "architecture": { "type": ["string", "null"] },
        "objective": { "type": ["string", "null"] },
        "pretraining": { "type": ["string", "null"] },
        "finetuning": { "type": ["string", "null"] }
      }
    },
    "evaluation": {
      "type": "object",
      "additionalProperties": false,
      "required": ["tasks", "benchmarks", "headline_results"],
      "properties": {
        "tasks": { "type": "array", "items": { "type": "string" } },
        "benchmarks": { "type": "array", "items": { "type": "string" } },
        "headline_results": { "type": "array", "items": { "type": "string" } }
      }
    },
    "open_source": {
      "type": "object",
      "additionalProperties": false,
      "required": ["code_url", "weights_url", "license"],
      "properties": {
        "code_url": { "type": ["string", "null"] },
        "weights_url": { "type": ["string", "null"] },
        "license": { "type": ["string", "null"] }
      }
    },
    "tags": {
      "type": "object",
      "additionalProperties": false,
      "required": ["paper_type", "backbone", "objective", "tokenization", "topology"],
      "properties": {
        "paper_type": {
          "type": "array",
          "items": { "type": "string", "enum": ["new-model", "post-training", "benchmark", "survey"] },
          "uniqueItems": true,
          "maxItems": 2
        },
        "backbone": {
          "type": "array",
          "items": { "type": "string", "enum": ["transformer", "mamba-ssm", "moe", "diffusion"] },
          "uniqueItems": true,
          "maxItems": 2
        },
        "objective": {
          "type": "array",
          "items": { "type": "string", "enum": ["masked-reconstruction", "autoregressive", "contrastive", "discrete-code-prediction"] },
          "uniqueItems": true,
          "maxItems": 2
        },
        "tokenization": {
          "type": "array",
          "items": { "type": "string", "enum": ["time-patch", "latent-tokens", "discrete-tokens"] },
          "uniqueItems": true,
          "maxItems": 2
        },
        "topology": {
          "type": "array",
          "items": { "type": "string", "enum": ["fixed-montage", "channel-flexible", "topology-agnostic"] },
          "uniqueItems": true,
          "maxItems": 2
        }
      }
    },
    "limitations": {
      "type": "array",
      "items": { "type": "string", "minLength": 3 },
      "minItems": 2,
      "maxItems": 8
    },
    "used_fulltext": { "type": "boolean" },
    "notes": { "type": "string" }
  }
}
